# Wanchai Arbitrage Bot - Environment Variables
# Copy this file to .env and fill in your credentials

# Polymarket Configuration
POLYMARKET_API_KEY=your_polymarket_api_key
POLYMARKET_API_SECRET=your_polymarket_api_secret
POLYMARKET_API_PASSPHRASE=your_passphrase

# Wallet Configuration (for Polygon transactions)
WALLET_PRIVATE_KEY=your_private_key_here
WALLET_ADDRESS=your_wallet_address_here

# Exchange API Keys (for price feeds)
BINANCE_API_KEY=your_binance_api_key
BINANCE_API_SECRET=your_binance_secret

COINBASE_API_KEY=your_coinbase_api_key
COINBASE_API_SECRET=your_coinbase_secret

KRAKEN_API_KEY=your_kraken_api_key
KRAKEN_API_SECRET=your_kraken_secret

# Optional: Telegram Notifications
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_chat_id

# Optional: Discord Notifications
DISCORD_WEBHOOK_URL=your_discord_webhook_url

# Database (optional, defaults to SQLite)
DATABASE_URL=sqlite:///data/trades.db

# RPC Provider (for Polygon)
POLYGON_RPC_URL=https://polygon-rpc.com
